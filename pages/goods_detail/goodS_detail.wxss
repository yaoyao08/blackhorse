/* pages/goods_detail/goodS_detail.wxss */
.bottomBar {
    display: flex;
    align-items: baseline;
    width: 100%;
    height: 50px;
    position: fixed;
    bottom: 0;
    background-color: white;
    z-index: 100;
}

.inBox {
    background-color: white !important;
    flex: 1.7 !important;
    text-align: center !important;
    height: 100% !important;
    font-size: 9px !important;
    display: flex !important;
    flex-direction: column !important;
    border: 0 !important;
    margin: 0 !important;
    padding: 0 !important;
}

.inBox2 {
    flex: 2;
    background-color: rgb(248, 248, 91);
    height: 100%;
    display: flex;
    align-items: center;
    text-align: center;
    justify-content: center;
}

.inBox3 {
    flex: 2;
    height: 100%;
    background-color: rgb(209, 3, 3);
    display: flex;
    align-items: center;
    justify-content: center;
}

.imgSwipper {
    width: 100%;
    height: 400rpx;
    background-color: white;
}

.publicParent {
    width: 100%;
    height: 100%;
    background-color: #eeeeee;
    padding: 20rpx 0;
}

.viewImg {
    z-index: 1000;
    background-color: #646464;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    bottom: 0;
    opacity: 1;
    align-items: center;
    display: flex;
}

.detail_left {
    margin: 10rpx 0;
    height: 90rpx;
    width: 100%;
    color: red;
    font-size: 40rpx;
    display: flex;
    align-items: center;
    background-color: white;
    justify-content: space-around;
}

.collect {
    flex: 1;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.detail {
    flex: 5;
    display: flex;
    justify-content: space-between;
    border-right: 1px solid lightgray;
    align-items: center;
}

.collectIconHover {

    transform: scale(0.8);
    transition: all 0.5s;
}

.cart {
    width: 100%;
    position: fixed;
    z-index: 99;
    bottom: -100rpx;
    opacity: 0;
    height: 0rpx;
    transition: all 2s;
}

.cart_active {
    z-index: 99;
    margin-top: 300rpx;
    background-color: #eeeeee;
    width: 100%;
    position: fixed;
    opacity: 1;
    bottom: 100rpx;
    height: 600rpx;
    transition: all 1s;
}

.counter {
    display: flex;
    border: 1px solid rgb(233, 233, 233);
    height: 40rpx;
    width: 200rpx;
}